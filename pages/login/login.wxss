.background{
  width: 100%;
  height: 100%;
  z-index: -1;
  position: fixed;
  background-size: 100% 100%;
}

#w1{
  position: absolute;
  width: 90%;
  left: 10%;
  top: 150rpx;
  font-size: 65rpx;
  font-weight: 900;
  color: white;
}



form{
  position: absolute;
  top: 450rpx;
  width: 80%;
  height: 240rpx;
  left: 10%;
}

form input{
  color: white;
  box-sizing: border-box;
  height:50%;
  font-size: 30rpx;
  border: 1px solid rgb(56, 51, 51);
  background-size: 60rpx 60rpx;
  background-color: rgba(255, 255, 255,0.3);
  background-position:5% 50%; 
  background-repeat: no-repeat;
  border-radius: 30px;
  padding-left: 15%;
}

#login{
  position: absolute;
  margin-left: 25%;
