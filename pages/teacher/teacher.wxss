.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: rgb(238, 249, 253);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1;
}
.tab-bar-border {
  background-color:#f0f0f0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 33px;
  height: 30px;
}

.tab-bar-item view {
  font-size: 12px;
}
