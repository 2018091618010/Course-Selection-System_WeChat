.background{
  width: 100%;
  height: 100%;
  z-index: -1;
  position: fixed;
  background-size: 100% 100%;
}

.block{
  display: flex;
  flex-direction: column;
  background-color: white;
  
  }  
  .couserlist{
  display:flex;
  flex-direction:column;
  margin-left: 20rpx;
  margin-top: 40rpx;
  background: #FFFFFF;
  width: 90%;
  padding: 0 20rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  opacity: 0.75;
  background-color: white;
  box-shadow: 1px 2px 5px 5px rgb(229, 229, 235);
  }
  .top{
    display: block;
  }
  .coursename{
  color: #4d4a4a;
  font-size: 50rpx;
  }
  /* 下拉图标 */
  .dropicon{
    left:90%;
  height:52rpx;
  width:52rpx;
  }

  /* 下拉框 */
  .top-selected{
  flex-direction:column;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 22rpx;
  line-height: 80rpx;
  }
  /* 下拉内容 */
  .select_box {
  padding: 0 20rpx;
  overflow: hidden;
  font-size: 40rpx;
  }
  .select_one {
  width: 100%;
  position: relative;
  }
 
  