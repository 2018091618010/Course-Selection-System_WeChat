<!-- 第一块 -->
<view class="all">
<view class="login" style="height:200px;">
    <image src="/img/bg-me.jpg" style="height: 200px" class="loginbg"></image>
    <image src="{{userInfo.favicon?userInfo.favicon:'/img/user_defaulthead@2x.png'}}" style="border-radius: 100px" class="personal_logo" id="personal_logo"></image>
    <view class="userinfo">
        <view class="title" id="user_name" bindtap="login">
            {{userInfo.nickName?userInfo.nickName:"点击授权登录"}}
        </view>
        <view class="subtitle" id="shenfen">
            {{userInfo.certificationOk == 2?"已认证":"未认证"}}
        </view>
    </view>
    <!--<image src="../../images/personal_icon_arrow.png" class="person_arrow"></image>-->
</view>
<!-- 第二块 -->
<view class="thirdblock">
 <view class="item" bindtap="openInf" data-index="1">
        <image src="/img/me.png" class="item_ico"></image>
        <span>我的信息</span>
        <image src="/img/right.png" class="item_arrow"></image>
    </view>
</view>
<!-- 第三块 -->
<view class="h10"></view>
<view class="thirdblock">
    <view class="item"  data-index="2" bindtap="openOpinion">
        <image src="/img/suggest.png" class="item_ico"></image>
        <span>意见反馈</span>
        <image src="/img/right.png" class="item_arrow"></image>
    </view>
    <view class="h1"></view>
    <view class="item" bindtap="openSetting">
        <image src="/img/setting.png" class="item_ico"></image>
        <span>设置</span>
    </view>
</view>
<view class="h10"></view>
<view class="h10"></view>
</view>