    width: 90%;
    box-shadow: 1px 2px 10px 5px #EAF7FF;
  }
  
  .coursename{
    margin-top: 10rpx;
    margin-left: 10rpx;
    font-size:20px;
    font-weight: bold;
  }
  
  .teacher{
    width: 100%;
    font-size: 15px;
    margin-left: 10rpx;
    margin-bottom: 20rpx;
  }
  .LINE{
    width: 95%;
    margin: 0 auto;
    border: 0.1px solid rgb(105, 181, 252);
  }
  .captain{
    margin-top: 20rpx;
    margin-left: 4%;
