
.main{
  width: 100%;
  position: absolute;
  background-color:white;
  margin-bottom: 60px;
}

.teams{
  width: 100%;
  display: flex;
  flex-direction:column;
  align-content: space-around;
}

.team{
  position: relative;
  min-height: 200rpx;/*通过最小来限制*/
  margin: 40rpx auto;
  border-radius: 20px;
  width: 90%;
  box-shadow: 1px 2px 10px 5px #EAF7FF;
}

.coursename{
  text-align: center;
  margin-top: 10rpx;
  font-size:20px;
  font-weight: bold;
}

.teacher{
  width: 100%;
  font-size: 17px;
  margin-top: 10rpx;
  margin-left: 4%;
  margin-bottom: 20rpx;
}
.LINE{
  width: 95%;
  margin: 0 auto;
  border: 0.1px solid rgb(140, 227, 248);
}
.captain{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  margin-left: 4%;
  width: 93%;
}
.teamid{
  margin-top: 30rpx;
  margin-left: 4%;
  font-size: 13px;
  font-weight: bold;
}
.member{
  margin-top: 20rpx;
  margin-left: 4%;
  margin-bottom: 20rpx;
  font-size: 15px;
  display: inline-flex;
}