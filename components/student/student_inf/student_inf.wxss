  background: #f0f0f0;
}

.h1 {
  height: 1px;
  margin: 0 15px;
  background: #f0f0f0;
}

.firstblock, .secondblock, .thirdblock {
  background-color: #fff;
  border: 10px solid #f0f0f0;
  font-size: 16px;
}

/* 头部登陆 */

Page {
  font-size: 14px;
}

.top {
  width: 100%;
  height: 140px;
  background: #74d3fc;
  padding-top: 15px;
  position: relative;
}

.center {
  width: 95%;
  height: 110px;
  background-color:rgb(238, 249, 253);
  border-radius: 15px;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.center_img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.center_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.center_img .user_head {
  width: 100%;
  height: 100%;
}

.center_info {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 30px;
}

.center_name {
  font-size: 40rpx;
  color: rgb(27, 31, 231);
	font-weight: bold;
}

.center_content {
  padding-top: 24rpx;
  color: rgb(83, 80, 94);
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

/* 设置条目 */

.item {
  height: 50px;
  line-height: 50px;
  padding-left: 15px;
  background-color: #fff;
}

.item_ico {
  float: left;
  width: 23px;
  height: 20px;
  padding: 13px 15px 10px 0;
}

.item_arrow {
  float: right;
  height: 26px;
  width: auto;
  margin: 11px 20px;
}

.presshover {
  background-color: #fafafa;
}

.font_size {
  font-size: 16px;
  color: #333;
}
