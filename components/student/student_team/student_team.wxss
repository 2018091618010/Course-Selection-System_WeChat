.addbutton{
  position: fixed;
  bottom: 80px;
  height: 75px;
  right: 60rpx;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 1;
}
.add-item{
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.add-item image{
  width: 60px;
  height: 60px;
}
.add-item text{
  font-size: 15px;
}
.main{
  width: 100%;
  position: absolute;
  background-color:white;
  margin-bottom: 60px;
}

.teams{
  width: 100%;
  display: flex;
  flex-direction:column;
  align-content: space-around;
}

.team{
  position: relative;
  min-height: 200rpx;/*通过最小来限制*/
  margin: 40rpx auto;
  width: 90%;
  box-shadow: 1px 2px 10px 5px #EAF7FF;
}

.coursename{
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.teacher{
  width: 100%;
  font-size: 15px;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}
.LINE{
  width: 95%;
  margin: 0 auto;
  border: 0.1px solid rgb(105, 181, 252);
}
.captain{
  margin-top: 20rpx;
  margin-left: 4%;
  width: 93%;
}
.cap_contactway{
  margin-top: 30rpx;
  margin-left: 4%;
  font-size: 15px;
}
.member{
  margin-top: 30rpx;
  margin-left: 4%;
  font-size: 15px;
  display: inline-flex;
}